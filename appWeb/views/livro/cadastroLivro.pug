extends ../layout/layoutMenu

block content
  h1 Informações do livro doado:
  form(method='POST' action='/usuario' style="width: 30rem;" class="card form-group container")
  
    label(for="titulo") Titulo do livro:
    input(
      type='text'
      name='titulo'
      placeholder='Titulo do livro'
      class="form-control"
      required
    )

    label(for="autor") Autor do livro:
    input(
      type='text'
      name='autor'
      placeholder='Autor do livro'
      class="form-control"
      required
    )

    label(for="ano") Ano do livro:
    input(
      type='number'
      name='ano'
      min="1900"
      placeholder='Ex: 2020'
      class="form-control"
      required
    )
    div(class="container" data-toggle="buttons")
      input(
        type='submit'
        name='Cadastrar'
        value='Cadastrar'
        class="btn btn-primary"
      )
      a(class="btn btn-warning" href='/biblioteca') Voltar